// this file attempts to be exhaustive in dbx features just to give a good
// spot check that we didn't ruin everything.

model a (
	key    pk
	unique id
	unique name
	index  (
		fields ctime mtime
		unique
	)

	field pk    serial64
	field ctime timestamp ( autoinsert )
	field mtime timestamp ( autoinsert, autoupdate )
	field id    text
	field name  text
)

model b (
	key    pk
	unique id

	field pk   serial64
	field id   text
	field data text     ( updatable )
)

model c (
	key    pk
	unique id

	field pk   serial64
	field id   text
	field b_pk b.pk     cascade
)

model d (
	key    pk
	unique id
	unique a_id alias

	field pk    serial64
	field id    text
	field alias text              ( nullable, updatable )
	field e_id  e.id     restrict
	field a_id  a.id     cascade
)

model a_b (
	key   b_pk a_pk
	field b_pk b.pk cascade
	field a_pk a.pk cascade
)

model e (
	key    pk
	unique id

	field pk   serial64
	field id   text
	field a_id a.id     cascade
)

